{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            // `qemu-riscv64 2>&1` redirect stderr to stdout because vscode doesn't capture task output
            "command": "cargo b --bin $binary && qemu-riscv64 2>&1 target/riscv64gc-unknown-none-elf/debug/$binary",
            "options": {
                "env": {
                    "binary": "panic"
                }
            },
        }
    ]
}